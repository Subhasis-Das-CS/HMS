<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/cvsort</property>
        <property name="connection.username">root</property>
        <property name="connection.password">Snap@2000</property>
        
        <property name="hbm2ddl.audo">update </property>
        <property name="show_sql"> true</property>
        <property name="format_sql">true </property>
        <mapping class="com.entities.App"/>
        <mapping class="com.entities.Patients"/>
		<mapping class="com.entities.Login"/>
		<mapping class="com.entities.Doctors"/>
       	<mapping class="com.entities.Appointment"/>
       		<mapping class="com.entities.Bill"/>
       		<mapping class="com.entities.Admin"/>
       		<mapping class="com.entities.Prescription"/>
       		<mapping class="com.entities.Staff"/>
       		<mapping class="com.entities.Inventory"/>
    </session-factory>
</hibernate-configuration>